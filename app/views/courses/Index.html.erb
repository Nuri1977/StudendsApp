<div class="row">
  <div class="col s12">
    <h3 class="center-align">Course Listing</h3>
  </div>
</div>

<div class="row">
  <% @courses.each do |c| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= c.short_name %>: <%= c.name %></span>
          <p class="nuri"><%= c.description %></p>
        </div>
        <div class="card-action">
        <% if logged_in? && !(current_user.courses.include?(c))  %>
          <%= link_to "Enroll", course_enroll_path(course_id: c.id), method: :post %>
        <% end %>
          <a href="#">Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
